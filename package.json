{
  "name": "@readonlylink/x-markdown",
  "version": "0.0.5",
  "repository": "github:readonlylink/x-markdown",
  "main": "lib/index.js",
  "files": [
    "lib"
  ],
  "scripts": {
    "prepare": "husky install",
    "build": "rm -rf lib && tsc",
    "build:watch": "rm -rf lib && tsc --watch",
    "test:ts": "vitest --dir src --threads false --run",
    "test:watch": "vitest --dir src --threads false",
    "test:coverage": "vitest --dir src --threads false --run --coverage ",
    "test:gui": "vitest --dir src --threads false --ui",
    "test": "npm run test:ts",
    "format": "prettier src --write"
  },
  "dependencies": {
    "front-matter": "^4.0.2",
    "markdown-it": "^13.0.1",
    "markdown-it-footnote": "^3.0.3"
  },
  "devDependencies": {
    "@types/markdown-it": "^12.2.3",
    "@types/node": "^18.15.11",
    "@vitest/coverage-c8": "^0.29.8",
    "@vitest/coverage-istanbul": "^0.29.8",
    "@vitest/ui": "^0.29.8",
    "husky": "^8.0.3",
    "prettier": "^2.8.7",
    "prettier-plugin-organize-imports": "^3.2.2",
    "pretty-quick": "^3.1.3",
    "typescript": "^5.0.2",
    "vite": "^4.2.1",
    "vitest": "^0.29.8"
  },
  "license": "GPL-3.0-or-later"
}
