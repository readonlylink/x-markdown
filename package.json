{
  "name": "@xieyuheng/x-markdown",
  "version": "0.1.3",
  "repository": "github:xieyuheng/x-markdown",
  "main": "lib/index.js",
  "files": [
    "lib"
  ],
  "scripts": {
    "prepare": "husky install",
    "build": "rm -rf lib && tsc",
    "build:watch": "rm -rf lib && tsc --watch",
    "test:ts": "vitest --dir src --threads false --run",
    "test:watch": "vitest --dir src --threads false",
    "test:coverage": "vitest --dir src --threads false --run --coverage ",
    "test:gui": "vitest --dir src --threads false --ui",
    "test": "npm run test:ts",
    "format": "prettier src --write"
  },
  "dependencies": {
    "front-matter": "^4.0.2",
    "markdown-it": "^13.0.1",
    "markdown-it-footnote": "^3.0.3"
  },
  "devDependencies": {
    "@types/markdown-it": "^12.2.3",
    "@types/markdown-it-footnote": "^3.0.0",
    "@types/node": "^20.2.5",
    "@vitest/coverage-c8": "^0.32.0",
    "@vitest/coverage-istanbul": "^0.32.0",
    "@vitest/ui": "^0.32.0",
    "husky": "^8.0.3",
    "jsdom": "^22.1.0",
    "prettier": "^2.8.8",
    "prettier-plugin-organize-imports": "^3.2.2",
    "pretty-quick": "^3.1.3",
    "typescript": "^5.1.3",
    "vite": "^4.3.9",
    "vitest": "^0.32.0"
  },
  "license": "GPL-3.0-or-later"
}
